<Window x:Class="WorldCup.TeamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team" Height="700" Width="300">
    <Grid Name="TeamGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="650"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row ="1" Name="Games">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="80"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Label Content="Goals" Grid.Column="0" Grid.Row="0"/>
            <Label Name="Score" Grid.Column="1" Grid.Row="0"/>
            <Label Content="All Teams" Grid.RowSpan="2" Grid.Row="8" MouseDown="Label_MouseDown"/>
        </Grid>
    </Grid>
</Window>
